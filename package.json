{
  "name": "sef-efakture-app",
  "version": "1.0.0",
  "description": "Profesionalna full-stack TypeScript aplikacija za srpski SEF (Sistem Elektronskih Faktura) - enterprise solution",
  "author": {
    "name": "zoxknez",
    "email": "zoxknez@hotmail.com",
    "url": "https://github.com/zoxknez"
  },
  "homepage": "https://github.com/zoxknez/eFakturaSef",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoxknez/eFakturaSef.git"
  },
  "bugs": {
    "url": "https://github.com/zoxknez/eFakturaSef/issues"
  },
  "keywords": [
    "sef",
    "efakture",
    "serbia",
    "typescript",
    "react",
    "nodejs",
    "prisma",
    "ubl",
    "invoice",
    "elektronske-fakture"
  ],
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:safe": "powershell -ExecutionPolicy Bypass -File scripts/dev-separate.ps1",
    "dev:clean": "powershell -ExecutionPolicy Bypass -File scripts/cleanup.ps1 && npm run dev",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "db:setup": "powershell -ExecutionPolicy Bypass -File scripts/db-setup.ps1",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install && npm install --workspaces",
    "kill-port": "npm run kill-port --workspace=backend",
    "prune": "npm prune --workspaces",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "npm run migrate:dev --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },

  "license": "MIT"
}
