# Environment variables for backend

# Application
NODE_ENV=development
PORT=3003

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5433/sef_efakture?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=24h

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379

# File uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12

# SEF Webhook (header: X-SEF-Signature: sha256=<hex>)
SEF_WEBHOOK_SECRET=your-webhook-secret-change-in-production

# SEF API Keys (get from SEF portal)
SEF_DEMO_API_KEY=your-demo-api-key-here
SEF_PROD_API_KEY=your-prod-api-key-here
