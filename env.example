# SEF eFakture Application Environment Variables
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/sef_efakture

# Security - CRITICAL: Generate strong secrets!
JWT_SECRET=your-super-secret-jwt-key-here-generate-strong-random-string
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
WEBHOOK_SECRET=your-webhook-secret-here-generate-strong-random-string
SESSION_SECRET=your-session-secret-here

# SEF API
SEF_API_KEY=your-sef-api-key-here

# Redis (for Bull Queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sef-efakture.com

# Monitoring (Optional but recommended)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
GRAFANA_PASSWORD=admin
